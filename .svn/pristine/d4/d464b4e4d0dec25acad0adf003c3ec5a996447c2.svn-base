<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
    <meta name="_csrf" content="${_csrf.token}">
    <meta name="_csrf_header" content="${_csrf.headerName}">
    <title>성적 증명서</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        .preview-container {
            text-align: center;
            padding-right: 20px;
            max-height: 80vh; /* 창 높이에 맞추기 */
        }
        .preview {
            border: 1px solid #ddd;
            padding: 10px;
            background-color: white;
            transform: scale(1.0); /* 크기 조정 */
            transform-origin: top left; /* 축소 시 위치 고정 */
            margin-bottom: 20px;
            max-width: 100%; /* 창 너비에 맞추기 */
        }
        .actions-container {
            text-align: center;
            width: 100%;
        }
        .certificate-container {
            width: 210mm;
            height: 297mm;
            background-color: white;
            position: relative;
            border: 3px solid #800020; /* 와인색 */
            padding: 20px;
            box-sizing: border-box; /* 패딩 포함한 크기 조정 */
            overflow: hidden; /* 자식 요소가 밖으로 나가지 않게 */
        }
        .certificate {
            width: 100%;
            height: 100%;
            padding: 20px;
            background-color: white;
            font-family: 'Times New Roman', serif;
            line-height: 1.6;
            position: relative;
            box-sizing: border-box; /* 패딩 포함한 크기 조정 */
            z-index: 1; /* 텍스트 레이어 */
        }
        .header {
            text-align: center;
            margin-bottom: 20px;
        }
        .header h1 {
            font-size: 3em;
            margin: 0;
            font-weight: bold;
        }
        .body {
            margin-top: 20px;
        }
        .field-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        .field-table th, .field-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .grade-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        .grade-table th, .grade-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: center;
        }
        .grade-table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }
        .footer {
            text-align: center;
            margin-top: 40px;
            font-size: 1.2em;
            position: absolute;
            bottom: 50px;
            width: 100%;
            z-index: 1; /* 텍스트 레이어 */
        }
        .seal-container {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 20px;
        }
        .seal {
            margin-left: 20px;
            position: absolute;
            top: 40%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 0; /* 배경 레이어 */
            opacity: 0.2; /* 불투명도 조절 */
        }
        .seal img {
            width: 400px;
            height: 400px; /* 크기 조정 */
        }
        .logo-container {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        .logo-container img {
            width: 400px;
            height: 400px; /* 크기 조정 */
        }
        button {
            padding: 10px 20px;
            font-size: 1.2em;
            cursor: pointer;
            background-color: #800020;
            color: white;
            border: none;
            border-radius: 5px;
            margin-top: 20px; /* 추가된 여백 */
        }
    </style>
</head>
<body>
<div class="container">
<h1>미리보기</h1>
    <div class="preview-container">
        <div class="preview">
            <div class="certificate-container" id="previewContainer">
                <div class="seal">
                    <img src="${pageContext.request.contextPath}/resources/images/대덕대학교직인.png" alt="학교 직인">
                </div>
                <div class="certificate">
                    <div class="logo-container">
                        <img src="${pageContext.request.contextPath}/resources/images/대덕대학교로고.png" alt="대덕대학교 로고" style="width:300px; height:300px;">
                    </div>
                    <p style="text-align: left;">발급 번호 : 제 <span id="certificateNumber"></span> 호</p> <br><br><br>

                    <div class="header">
                        <h1>성   적   증   명   서</h1>
                    </div>
                    <div class="body">
                        <table class="field-table">
                            <tr>
                                <th>성명</th>
                                <td>${student.stuName}</td>
                                <th>학번</th>
                                <td>${student.stuNo}</td>
                            </tr>
                            <tr>
                                <th>전공</th>
                                <td>${student.deptName}</td>
                                <th>입학일</th>
                                <td>${student.stuSdate}</td>
                            </tr>
                            <tr>
                                <th>성별</th>
                                <c:if test="${student.comDetGNo eq 'G0101' }"><td>남성</td></c:if>
                                <c:if test="${student.comDetGNo ne 'G0101' }"><td>여성</td></c:if>
                                <th>생년월일</th>
                                <td>${student.stuRegno}</td>
                            </tr>
                        </table>
                        <c:set var="currentYear" value="" />
                        <c:set var="currentSemester" value="" />
                        <c:forEach var="grade" items="${gradeList}" varStatus="status">
                            <c:if test="${grade.year ne currentYear or grade.semester ne currentSemester}">
                                <c:set var="currentYear" value="${grade.year}" />
                                <c:set var="currentSemester" value="${grade.semester}" />
                                <h3>${grade.year}년도 ${grade.semester}학기</h3>
                                <table class="grade-table">
                                    <thead>
                                        <tr>
                                            <th>강의 구분</th>
                                            <th>과목명</th>
                                            <th>강의명</th>
                                            <th>학년</th>
                                            <th>인정 학점</th>
                                            <th>성적</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                            </c:if>
                            <tr>
                                <td>${grade.comDetName}</td>
                                <td>${grade.subName}</td>
                                <td>${grade.lecName}</td>
                                <td>${grade.lecAge}</td>
                                <td>${grade.lecScore}</td>
                                <td>${grade.couScore}</td>
                            </tr>
                            <c:if test="${status.last or (grade.year eq currentYear and grade.semester eq currentSemester and (status.index + 1) lt gradeList.size() and (gradeList[status.index + 1].year ne currentYear or gradeList[status.index + 1].semester ne currentSemester))}">
                                    </tbody>
                                </table>
                            </c:if>
                        </c:forEach>
                    </div>
                    <div class="footer" id="footer">
                        <h4>대덕대학교 총장 송중호</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="actions-container">
            <button id="generatePdf">PDF 생성</button>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
    	
    	// 발급일자를 위한 함수
        function getTodayDate() {
            var today = new Date();
            var year = today.getFullYear();
            var month = String(today.getMonth() + 1).padStart(2, '0');
            var day = String(today.getDate()).padStart(2, '0');
            return year + "년 " + month + "월 " + day + "일";
        }

    	// 발급 번호 우선 랜덤으로 생성
        function getRandomCertificateNumber() {
            const parts = [];
            for (let i = 0; i < 3; i++) {
                parts.push(Math.floor(Math.random() * 1000000).toString().padStart(4, '0'));
            }
            return parts.join('-');
        }

        $('#currentDate').text(getTodayDate());
        $('#certificateNumber').text(getRandomCertificateNumber());

        $('#generatePdf').on('click', function() {
            html2canvas($('#previewContainer')[0], {
                scale: 2 // 해상도를 2배로 설정
            }).then(function(canvas) {
                var imgData = canvas.toDataURL('image/png');
                var imgWidth = 210; // A4 width in mm
                var pageHeight = 297; // A4 height in mm
                var imgHeight = canvas.height * imgWidth / canvas.width;
                var doc = new jsPDF('p', 'mm', 'a4');

                doc.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);
                
                var pdfUrl = doc.output('bloburl');
                window.open(pdfUrl, '_blank');
            });
        });
    });
</script>
</body>
</html>
