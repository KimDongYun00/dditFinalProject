	</select> -->

	<!-- 미승인 처리 장학금 일괄 승인 처리 -->
	<update id="scholarshipRequestsApprove">
    	update 
        	scholarship_receive
    	set 
        	com_det_c_no = 'C02'
    	where 
        	com_det_c_no = 'C03'
	</update>

	<!-- 미승인 처리 장학금 승인 처리(상세보기 내에서) -->
	<update id="scholarshipRequestApprove" parameterType="String">
		update 
			scholarship_receive
  		   set 
  		   	com_det_c_no = 'C02'
         where 
         	sch_rec_no = #{schRecNo}  
	</update>	

	<!-- 미승인 처리 장학금 반려 처리(상세보기 내에서) -->
	<update id="scholarshipRequestWait" parameterType="String">
		update 
			scholarship_receive
  		   set 
  		   	com_det_c_no = 'C04'
         where 
         	sch_rec_no = #{schRecNo}  
	</update>	
	
	
</mapper>
	










