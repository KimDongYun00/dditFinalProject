				String fileName = UUID.randomUUID().toString(); // UUID 파일명 만들기
				fileName += "_" + proImgFile.getOriginalFilename();
				
				uploadPath += "/" + fileName;
				
				proImgFile.transferTo(new File(uploadPath));
				
				proImg = "/resources/proImg/" + fileName;
			}
			
			proVO.setProImg(proImg);
			
		} catch (Exception e) {
